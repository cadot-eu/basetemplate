<div data-base--chat-token-value="{{ChatToken}}" data-controller="base--chat" data-base--chat-reponse-value='{{template_box_reponse}}' data-base--chat-question-value='{{template_box_question}}' data-base--chat-bonjour-value="Comment puis-je vous aider?">
	<div class="container-fluid position-fixed  h-75" style="z-index:3000;overflow-y:scroll;">
		<div class="row d-flex justify-content-end ">
			<div class="col-lg-3">
				<div class="card" id="chat1" style="border-radius: 15px;">
					<div class="card-header d-flex justify-content-between align-items-center p-3 bg-info text-white border-bottom-0" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
						<i class="fas fa-angle-left"></i>
						<p class="mb-0 fw-bold">Vous avez une question?</p>
						<i class="fas fa-times"></i>
					</div>
					<div class="card-body">
						<div class="form-outline">
							<textarea class="form-control" rows="4" data-base--chat-target="message"></textarea>
							<label class="form-label" for="textAreaExample">Tapez votre message</label>
						</div>
						<div data-ajax-target="retourAjax"></div>
						<div class="d-flex flex-row justify-content-end mb-4">
							<button type="submit" class="btn btn-primary" data-action="base--chat#send">Envoyer</button>
						</div>
					</div>
					<div data-base--chat-target="destination"></div>

				</div>

			</div>
		</div>

	</div>
</div>